{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/CiscoLearning/tutorial-testing/schemas/pr-comment-payload.schema.json",
  "title": "PRCommentPayload",
  "description": "Complete payload for generating the PR comment",
  "type": "object",
  "required": [
    "pr_number",
    "tutorial_folder",
    "overall_status",
    "validation_results",
    "blocking_count",
    "warning_count",
    "generated_at"
  ],
  "properties": {
    "pr_number": {
      "type": "integer",
      "minimum": 1,
      "description": "Pull request number"
    },
    "tutorial_folder": {
      "type": "string",
      "pattern": "^tc-[a-zA-Z0-9-]+$",
      "description": "Name of tutorial folder"
    },
    "overall_status": {
      "type": "string",
      "enum": ["passed", "failed", "warnings"],
      "description": "Aggregated validation status"
    },
    "validation_results": {
      "type": "array",
      "items": {
        "$ref": "validation-result.schema.json"
      },
      "description": "Results from all validation steps"
    },
    "blocking_count": {
      "type": "integer",
      "minimum": 0,
      "description": "Total number of blocking errors"
    },
    "warning_count": {
      "type": "integer",
      "minimum": 0,
      "description": "Total number of warnings"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of comment generation"
    }
  }
}
